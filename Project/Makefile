#-----------------------------------------------------------------------
# EXECUTABLE NAME & MAIN FILE NAME
#-----------------------------------------------------------------------

export EXEC := exec

#-----------------------------------------------------------------------
# DIRECTORIES VARIABLES
#-----------------------------------------------------------------------

SDIR        := ./src

SECMAKE     := "Makefile.src"

#-----------------------------------------------------------------------
# COMPILE PROJECT RULES
#-----------------------------------------------------------------------

all:
	@cd $(SDIR) && $(MAKE) -f $(SECMAKE)

#-----------------------------------------------------------------------
# BUILD & CLEAN PROJECT RULES
#-----------------------------------------------------------------------

.PHONY: all clean cleanall

clean:
	@cd $(SDIR) && $(MAKE) -f $(SECMAKE) clean

cleanall:
	@cd $(SDIR) && $(MAKE) -f $(SECMAKE) cleanall
